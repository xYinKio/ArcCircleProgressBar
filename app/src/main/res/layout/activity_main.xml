<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <yinkio.android.customView.progressBar.ArcCircleProgressBar
        android:id="@+id/progressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:elevation="8dp"

        app:shadowLeft="10"
        app:shadowTop="10"
        app:shadowBottom="10"
        app:shadowRight="10"

        app:progress="95"
        app:roundTips="true"
        app:progressScale="0.9"

        app:indicatorWidth="20dp"
        app:indicatorStartAngle="-90"
        app:indicatorEndAngle="270"
        app:indicatorColor="#FF8E00"
        app:indicatorDrawGradient="false"
        app:indicatorGradientAngle="90"
        app:indicatorGradientWidth="200dp"
        app:indicatorGradientTileMode="repeat"
        app:indicatorShadowGradientPositions="@array/indicator_positions"
        app:indicatorShadowGradientTileMode="repeat"
        app:indicatorShadowGradientWidth="200dp"
        app:indicatorShadowGradientAngle="90"
        app:indicatorShadowBlurValue="25"
        app:indicatorShadowDrawGradient="true"
        app:indicatorShadowGradientColors="@array/indicator_colors"
        app:indicatorHasShadow="true"


        app:canalStartAngle="-90"
        app:canalEndAngle="270"
        app:canalWidth="10dp"
        app:canalColor="#0A00FF"
        app:canalDrawGradient="false"
        app:canalGradientAngle="30"
        app:canalGradientWidth="100dp"
        app:canalGradientTileMode="mirror"
        app:canalShadowBlurValue="25"
        app:canalShadowDrawGradient="false"
        app:canalShadowGradientColors="@array/progress_shadow_colors"
        app:canalHasShadow="true"
        app:canalShadowColor="#0A00FF"/>

    <Button
        android:id="@+id/decreaseProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrease" />

    <Button
        android:id="@+id/increaseProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Increase" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>