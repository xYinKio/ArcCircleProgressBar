<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <yinkio.android.customView.progressBar.ArcCircleProgressBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:indicatorStartAngle="0"
        app:indicatorEndAngle="360"
        app:indicatorColor="@color/teal_200"
        app:indicatorWidth="20dp"
        app:indicatorShader="LinearGradient"
        app:indicatorGradientWidth="200dp"
        app:indicatorGradientLinearAngle="90"
        app:indicatorGradientColors="@array/gradient_colors"
        app:progress="50"/>

</FrameLayout>